@model List<UserInfo>

@{
  ViewBag.Title="List Of Participants";
}
<main class="text-center">
<h1 class="h4">List Of Participants</h1>
<table class="table table-bordered">
  <thead>
    <tr>
      <td>Name</td>

      <td>Participation Status</td>
      <td></td>
    </tr>
  </thead>
  <tbody>
    @{int i=0;}
    @foreach(var user in Model) {
      var status = user.WillAttend == true ? "Yes" : "No";
      var className= user.WillAttend == true ? "table-success" : "table-danger";
      if(user.WillAttend == true) {
        i++;
      }
      <tr class="@className">
        <td>@user.Name</td>   
        <td>@status</td>
        <td>
          <a href="/meeting/details/@user.Id"class="btn btn-sm btn-primary">Details</a>
        </td>
      </tr>
    }
  </tbody>
</table>
<div class="card">
  <div class="card-body">
    <span>Number Of People:@i</span>
  </div>
</div>
</main>